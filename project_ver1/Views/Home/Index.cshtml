                </div>
            </div>
        </div>
    </div>
</div>

<button onclick="topFunction()" id="backToTopBtn" title="返回頂部" class="btn btn-primary">至頂</button>

<script>
    (function () {
        window.onscroll = function () {
            scrollFunction();
            fadeInElements();
        };

        function scrollFunction() {
            const backToTopBtn = document.getElementById("backToTopBtn");
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                backToTopBtn.style.display = "block";
                backToTopBtn.style.opacity = "1";
            } else {
                backToTopBtn.style.opacity = "0";
                setTimeout(function () { backToTopBtn.style.display = "none"; }, 300);
            }
        }

        window.topFunction = function () {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }

        function fadeInElements() {
            const fadeIns = document.querySelectorAll('.fade-in');
            const windowHeight = window.innerHeight;
            const elementVisible = 150;

            fadeIns.forEach(fadeIn => {
                const elementTop = fadeIn.getBoundingClientRect().top;
                if (elementTop < windowHeight - elementVisible) {
                    fadeIn.classList.add('active');
                } else {
                    fadeIn.classList.remove('active');
                }
            });
        }

        window.addEventListener('scroll', function () {
            const cardBodies = document.querySelectorAll('.card-body');
            const windowHeight = window.innerHeight;
            const elementVisible = 150;

            cardBodies.forEach(cardBody => {
                const cardTop = cardBody.getBoundingClientRect().top;
                if (cardTop < windowHeight - elementVisible) {
                    cardBody.style.opacity = "1";
                } else {
                    cardBody.style.opacity = "0";
                }
            });
        });
    })();
</script>

<style>
    .fade-in {
        opacity: 0;
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }

        .fade-in.active {
            opacity: 1;
            transform: translateY(0);
        }

    .hover-effect:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

    #backToTopBtn {
        opacity: 0;
        transition: opacity 0.3s, visibility 0.3s;
        visibility: hidden;
        background-color: orange;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
        border: none;
        position: fixed;
        bottom: 20px;
        right: 20px;
    }

        #backToTopBtn[style*="display: block;"] {
            visibility: visible;
        }

    /* 新增的樣式 */
    .card-body {
        opacity: 0; /* 初始設置為透明 */
        transition: opacity 0.3s;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.9); /* 白色半透明背景 */
        padding: 20px;
        color: black; /* 文字顏色 */
        border-radius: 5px; /* 圓角邊框 */
        position: absolute; /* 使文字外框層在圖片上 */
        bottom: 0; /* 使文字外框位於圖片下方 */
        left: 0;
        right: 0;
    }

    .hover-effect:hover .card-body {
        opacity: 1; /* 滑鼠懸停時顯示 */
    }
</style>