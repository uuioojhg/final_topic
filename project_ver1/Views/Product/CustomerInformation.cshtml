@model project_ver1.Models.Customer

@{
    ViewData["Title"] = "CustomerInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>


    .mb-box {
        width: 55%;
        padding: 120px;
        border-radius: 15px;
        border: 2px solid hsla(0, 0%, 85%, 1);
        margin: 0 auto;
        background-color: rgba(222, 237, 240, 0.953);
        box-shadow: 6px 6px 6px 2px gray;
    }

</style>

<div class="container-md">
    <div class="mb-box">
        <h3 class="text-center" style="font-weight:bold;">
            修改資料
        </h3>
        <br>
        <form asp-action="CustomerInformation" method="post">
            <div class="form-group">
                <label class="control-label">姓名</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">信箱</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">電話</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">地址</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="ID" />
            <button type="submit" class="btn btn-primary" onclick="confirmP()">儲存修改</button>
           
            
        </form>
        </<div>
            <br />
            <div>
                <form action="@Url.Action("ShoppingCart", "Product")" method="post">

                    <button type="submit" class=" btn btn-secondary">回到購買清單</button>
                </form>
            </div>
        </div>
        <script>
            function confirmP() {
                if (confirm('修改成功')) {
                    document.getElementById('purchaseForm').submit();
                   
                }
            }
        </script>

